<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= docTitle %></title>
        <link rel="stylesheet" href="/css/bootstrap.min.css" />
    </head>

    <% var
    activeShop,activeShopList,activeCart,activeCheckout,activeAddProduct,activeAddProductManage,breadcrumb;
    %>

    <body>
        <header class="main-header">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="/">NodeJs商城</a>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <!-- 這邊設置得ref是給router的，並不是檔案真正位置 -->
                        <li class="nav-item <% if(activeShop){%>active<%}%>">
                            <a class="nav-link" href="/">商城</a>
                        </li>
                        <li
                            class="nav-item <% if(activeShopList){%>active<%}%>">
                            <a class="nav-link" href="/product-list"
                                >商品列表</a
                            >
                        </li>
                        <li class="nav-item <% if(activeCart){%>active<%}%>">
                            <a class="nav-link" href="/cart">購物車</a>
                        </li>
                        <li
                            class="nav-item <% if(activeCheckout){%>active<%}%>">
                            <a class="nav-link" href="/checkout">訂單管理</a>
                        </li>
                        <li
                            class="nav-item <% if(activeAddProduct){%>active<%}%>">
                            <a class="nav-link" href="/add-product">添加产品</a>
                        </li>
                        <li
                            class="nav-item <% if(activeAddProductManage){%>active<%}%>">
                            <a class="nav-link" href="/products">產品管理</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <% if(breadcrumb){%> <%- include('./breadcrumb.ejs') %> <%}%>
        <main class="container p-5"></main>
    </body>
</html>
